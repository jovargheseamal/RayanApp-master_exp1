<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    tools:context=".AddCompany">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollcmp"
        android:layout_centerHorizontal="true"
        android:padding="10dp">

        <LinearLayout
            android:background="@color/LayoutBG"
            android:padding="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lay3"
            android:layout_gravity="center_horizontal">



            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/cmpnyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Company name"
                        android:textSize="15dp"
                        android:textColor="@android:color/black"
                        />


                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/Company_Name"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="8dp"
                    android:background="@color/gridbg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Company Name"
                    android:padding="10dp"
                    />

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:id="@+id/cntctpersn"
                    android:layout_below="@id/cmpnyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Contact Person"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/Contact_Person"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:background="@color/gridbg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Contact Person"
                   />


                </LinearLayout>


                <LinearLayout

                    android:id="@+id/tradelis"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/cntctpersn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Trade Licence"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />


                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/Trade_Licence"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gridbg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Trade Licence"
                    />

                </LinearLayout>



                <LinearLayout

                    android:id="@+id/tradeexp"
                    android:layout_below="@+id/tradelis"

                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Trade Licence Exp"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />

                <LinearLayout

                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".27"
                        android:background="@drawable/spinnerbg"
                        android:orientation="horizontal">


                    <Spinner
                        android:id="@+id/TRExp_day"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                       >

                    </Spinner>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".26"
                        android:background="@drawable/spinnerbg"
                        android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/TRExp_month"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        >

                    </Spinner>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".25"
                        android:background="@drawable/spinnerbg"
                        android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/TRExp_year"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        >

                    </Spinner>

                    </RelativeLayout>

                </LinearLayout>

                </LinearLayout>


                <LinearLayout

                    android:id="@+id/trn"
                    android:layout_below="@+id/tradeexp"

                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="TRN"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />


                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/TRN"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:background="@color/gridbg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="TRN"/>

                </LinearLayout>


                <LinearLayout

                    android:id="@+id/labrcardno"
                    android:layout_below="@+id/trn"

                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Labour Card Number"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/Labour_Card_No"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gridbg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Labour Card Number"/>

                </LinearLayout>



                <LinearLayout

                    android:id="@+id/immigratncardno"
                    android:layout_below="@+id/labrcardno"

                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Immigration Card Number"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/Immigration_Card_no"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gridbg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Immigration Card Number"/>
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/immigratnexp"
                    android:layout_below="@+id/immigratncardno"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Immigration Card Exp"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />


                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight=".27"
                            android:background="@drawable/spinnerbg"
                            android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/IMC_Exp_Day"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            >

                        </Spinner>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight=".26"
                            android:background="@drawable/spinnerbg"
                            android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/IMC_Exp_Month"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            >

                        </Spinner>
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight=".25"
                            android:background="@drawable/spinnerbg"
                            android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/IMC_Exp_Year"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            >

                        </Spinner>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout

                    android:id="@+id/tenancy"
                    android:layout_below="@+id/immigratnexp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Tenancy"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />


                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/Tenancy"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gridbg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Tenancy"/>

                </LinearLayout>

                <RelativeLayout

                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tenancy"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:id="@+id/sbmt"
                        android:text="Submit"
                        android:textSize="18dp"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:background="@drawable/tvborder2"
                        android:textColor="@android:color/white"
                        android:gravity="center"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>