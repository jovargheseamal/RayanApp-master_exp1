<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".AddUser">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollcmp"
        android:padding="10dp"
        android:fillViewport="true">

    <LinearLayout
        android:padding="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        >

        <EditText
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/gridbg"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="User Name"
            android:id="@+id/usrname"
            android:layout_below="@+id/name_of_user"/>


        <EditText

            android:padding="10dp"
            android:textSize="18dp"
            android:background="@color/gridbg"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Name"
            android:id="@+id/name_of_user"
            />


        <EditText
            android:inputType="number"
            android:padding="10dp"
            android:background="@color/gridbg"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Contact Number"
            android:layout_below="@id/usrname"
            android:id="@+id/usr_contact_no"
            />

        <EditText
            android:padding="10dp"
            android:background="@color/gridbg"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:layout_below="@id/usr_contact_no"
            android:id="@+id/user_pwrd"
            />

        <EditText
            android:padding="10dp"
            android:background="@color/gridbg"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:layout_below="@id/user_pwrd"
            android:id="@+id/cpwrd"
            />



        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cpwrd"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"
                android:background="@drawable/tvborder2"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:clickable="true"
                android:id="@+id/user_submit"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Submit"
                android:gravity="center"/>
        </RelativeLayout>





    </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>