<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->


        <TextView
            android:padding="20dp"
            android:id="@+id/compname"
            android:layout_below="@+id/userprof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:text="Rayan"
            android:textColor="@color/headerfont"
            android:textStyle="bold"
            android:layout_marginTop="30dp"

            tools:ignore="UnknownId" />




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compname"
            android:id="@+id/head1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact US"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>
        </RelativeLayout>




        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame1"


            android:layout_below="@+id/head1">




            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >





                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/contactlayout">



                    <TextView
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:textColor="@color/secondary"
                        android:text="Contact No        "

                        />
                    <TextView

                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:textColor="@color/headerfont"
                        android:text="+971 507671949
+971 552295100"

                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/websitelayout"
                    android:layout_below="@+id/contactlayout"
                    >

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:textColor="@color/secondary"
                        android:text="Website          "

                        />
                    <TextView

                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:textColor="@color/headerfont"
                        android:text="www.rayanajman.com"

                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/Emaillayout"
                    android:layout_below="@+id/websitelayout"
                    >

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:textColor="@color/secondary"
                        android:text="Email                  "

                        />
                    <TextView

                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:textColor="@color/headerfont"
                        android:text="info@rayanajman.com"

                        />

                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame1"
            android:id="@+id/head2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame2"


            android:layout_below="@+id/head2">




            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >





                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/addrsslayout">



                    <TextView
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/headerfont"
                        android:text="@string/Address"

                        />


                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>




    </RelativeLayout>







</RelativeLayout>