<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"

        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/toolbar"
        android:elevation="6dp"
        android:minHeight="50dp"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/appname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:text="Rayan"
            android:textSize="20dp"
            android:textColor="#ffff"
            />

    </android.support.v7.widget.Toolbar>



    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollcmp"
        android:padding="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/OwnerName1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"/>


                    <EditText
                    android:layout_marginTop="5dp"
                    android:inputType="textCapSentences"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Owner Name"
                    android:id="@+id/OwnerName"
                    android:background="@color/gridbg"

                    />

                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/addrs1"
                    android:layout_below="@+id/cmpname1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"/>






                <EditText
                    android:layout_marginTop="5dp"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:id="@+id/addrs"
                    android:background="@color/gridbg"
                    />

                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/email1"
                    android:layout_below="@+id/addrs1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>





                <EditText
                    android:layout_marginTop="5dp"
                    android:inputType="textWebEmailAddress"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:id="@+id/email"
                    android:background="@color/gridbg"
                    />


                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/contactno1"
                    android:layout_below="@+id/email1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number"/>





                <EditText
                    android:layout_marginTop="5dp"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Contact Number"
                    android:id="@+id/contactno"
                    android:background="@color/gridbg"
                    />
                </LinearLayout>




                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/uname1"
                    android:layout_below="@+id/contactno1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"/>



                <EditText
                    android:layout_marginTop="5dp"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Name"
                    android:id="@+id/uname"
                    android:background="@color/gridbg"
                    />
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/cmpname1"
                    android:layout_below="@+id/OwnerName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"/>





                <EditText
                    android:layout_marginTop="5dp"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Name"
                    android:id="@+id/cmpname"
                    android:background="@color/gridbg"
                    />

                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/paswd1"
                    android:layout_below="@+id/uname1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"/>



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:passwordToggleEnabled="true"


                    >



                <EditText
                    android:layout_marginTop="5dp"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:id="@+id/paswd"
                    android:background="@color/gridbg"
                    />
                </android.support.design.widget.TextInputLayout>

                </LinearLayout>




                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/cpaswd1"
                    android:layout_below="@+id/paswd1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"/>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:passwordToggleEnabled="true">
                <EditText
                    android:layout_marginTop="5dp"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:id="@+id/cnfmpaswd"
                    android:background="@color/gridbg"
                    />

                </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:id="@+id/regbtn"
                    android:textColor="@android:color/white"
                    android:background="@drawable/tvborder2"
                    android:text="Register"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>